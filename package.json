{
  "name": "example-project",
  "version": "1.0.0",
  "description": "Example project demonstrating development setup",
  "main": "index.js",
  "scripts": {
    "dev": "node --watch index.js",
    "start": "node index.js",
    "test": "node --test",
    "test:watch": "node --test --watch",
    "test:cov": "c8 --reporter=text --reporter=lcov npm test",
    "test:cov:check": "c8 --check-coverage --branches 87 --functions 95 --lines 90 --statements 90 npm test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "build": "echo 'Add build script here'",
    "prepare": "husky",
    "ai:ping": "node -e \"const p=process.env.PORT||3000; fetch('http://localhost:'+p+'/ai/ping').then(r=>r.text()).then(console.log).catch(e=>{console.error(e);process.exit(1)})\"",
    "ai:chat": "node -e \"const p=process.env.PORT||3000; fetch('http://localhost:'+p+'/ai/chat',{method:'POST',headers:{'content-type':'application/json'},body:JSON.stringify({prompt:'Diga apenas PONG'})}).then(r=>r.text()).then(console.log).catch(e=>{console.error(e);process.exit(1)})\"",
    "ai:solve": "node -e \"const p=process.env.PORT||3000; fetch('http://localhost:'+p+'/ai/solve',{method:'POST',headers:{'content-type':'application/json'},body:JSON.stringify({task:'Liste 3 passos objetivos para verificar logs de um serviço em produção'})}).then(r=>r.text()).then(console.log).catch(e=>{console.error(e);process.exit(1)})\""
  },
  "keywords": [
    "example",
    "development",
    "setup"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "openai": "^5.18.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "c8": "^10.1.3",
    "eslint": "^9.11.1",
    "husky": "^9.1.6",
    "lint-staged": "^16.1.6",
    "prettier": "^3.3.3"
  },
  "lint-staged": {
    "*.{js,mjs}": [
      "prettier -w",
      "eslint --fix"
    ]
  }
}
